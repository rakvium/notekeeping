<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.text.truncate(140) %></td>
        <td><%= note.user.id %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to('Edit', edit_note_path(note)) if can?(:update, note) %></td>
        <td><%= link_to('Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }) if can?(:destroy, note) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
