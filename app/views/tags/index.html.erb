<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<div class="row">
  <div class="col-md-6">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Tagged notes</th>
        </tr>
      </thead>

      <tbody>
        <% @tags.each do |tag| %>
          <tr>
            <td><%= link_to tag.name, tag_path(tag) %></td>
            <td><%= tag.note_tags.size %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= link_to 'New Tag', new_tag_path, class: 'btn btn-primary btn-lg' %>
